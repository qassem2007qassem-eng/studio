
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      // Default rule: Allow read and write access only to authenticated users.
      // This is a basic security measure to prevent unauthorized access.
      // For more granular control, you should define specific rules for each collection.
      allow read, write: if request.auth != null;
    }
  }
}
